		{
			"name": "Create",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const productNames = [",
							"    \"iPhone 17 Pro Max\",",
							"    \"iPhone 17 Pro\",",
							"    \"iPhone 17\",",
							"    \"Samsung Galaxy S25 Ultra\",",
							"    \"Samsung Galaxy S25\",",
							"    \"MacBook Pro M4\",",
							"    \"MacBook Air M4\",",
							"    \"iPad Pro 13\",",
							"    \"iPad Air 11\",",
							"    \"Apple Watch Series 10\",",
							"    \"AirPods Pro 3\",",
							"    \"Sony WH-1000XM6\",",
							"    \"Dell XPS 15\",",
							"    \"Surface Pro 11\",",
							"    \"Nintendo Switch 2\"",
							"];",
							"",
							"const skuPrefixes = [\"SGT\", \"APL\", \"SAM\", \"DEL\", \"SON\", \"NIN\", \"MSF\", \"LG\", \"HP\"];",
							"",
							"",
							"function generateRandomSku() {",
							"    const prefix = skuPrefixes[Math.floor(Math.random() * skuPrefixes.length)];",
							"    const numbers = Math.floor(Math.random() * 90000) + 10000;",
							"    return prefix + numbers;",
							"}",
							"",
							"function generateRandomPrice() {",
							"    const min = 99.99;",
							"    const max = 2999.99;",
							"    const price = Math.random() * (max - min) + min;",
							"    return Math.round(price * 100) / 100;",
							"}",
							"",
							"function generateRandomProductName() {",
							"    return productNames[Math.floor(Math.random() * productNames.length)];",
							"}",
							"",
							"pm.globals.set(\"randomProductName\", generateRandomProductName());",
							"pm.globals.set(\"randomSku\", generateRandomSku());",
							"pm.globals.set(\"randomPrice\", generateRandomPrice());",
							"",
							"console.log(\"Generated Product Name:\", pm.globals.get(\"randomProductName\"));",
							"console.log(\"Generated SKU:\", pm.globals.get(\"randomSku\"));",
							"console.log(\"Generated Price:\", pm.globals.get(\"randomPrice\"));",
							"",
							"pm.environment.set(\"randomProductName\", pm.globals.get(\"randomProductName\"));",
							"pm.environment.set(\"randomSku\", pm.globals.get(\"randomSku\"));",
							"pm.environment.set(\"randomPrice\", pm.globals.get(\"randomPrice\"));",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
